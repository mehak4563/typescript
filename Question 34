let favoritePizzas: string[] = ['Arbianranch', 'Pepperoni', 'Fajita'];

console.log("List of favorite pizzas:");
for (let pizza of favoritePizzas) {
    console.log(pizza);
}

console.log("\nSentences about favorite pizzas:");
for (let pizza of favoritePizzas) {
    console.log(`I like ${pizza} pizza.`);
}

// Print a statement about how much you like pizza
console.log("\nI really love pizza!");
